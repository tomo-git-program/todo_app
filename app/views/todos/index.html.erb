<div class="container">
  <h1>Todo List</h1>
  <%= link_to 'タスクを追加する', new_todo_path, class: 'new-task' %>
  <table>
    <thead>
      <tr>
        <th>タスク</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <!-- ここは後から動的コンテンツに置き換える -->
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.title %></td>
          <td>
            <%= link_to '編集', edit_todo_path(todo.id), class: 'edit' %>
            <%= link_to '削除', todo_path(todo.id), data: { turbo_method: :delete } , class: 'delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>